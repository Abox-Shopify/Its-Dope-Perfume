<div class="discount-modal">
   <div class="dic-modal-inner">
      <div class="modal-header" >
        <div onclick="discountModalclose()">
          <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" color="#1A181E"><g fill="none" fill-rule="evenodd"><g fill="currentColor" fill-rule="nonzero"><g><g><path d="M12.69 3.88c.396-.386 1.029-.379 1.415.016.356.364.378.932.068 1.32l-.084.094-8.55 8.36c-.359.35-.915.378-1.305.081l-.093-.081-8.55-8.36c-.395-.386-.402-1.02-.016-1.414.356-.365.923-.399 1.319-.098l.095.082 7.851 7.675 7.85-7.675z" transform="translate(-16 -95) translate(16 95) translate(1 3) rotate(90 4.84 8.775)"></path><path d="M21.78 7.775c.552 0 1 .448 1 1 0 .513-.386.936-.883.993l-.117.007H.66c-.552 0-1-.448-1-1 0-.513.386-.936.883-.993l.117-.007h21.12z" transform="translate(-16 -95) translate(16 95) translate(1 3)"></path></g></g></g></g></svg>
        </div>
        <span>Coupons and offers</span>
      </div>
      <div class="modal-detail-wrapper">
        <div class="discout-by-input">
          <input type="text" placeholder="Enter coupon code" oninput="handleInputChange(event)">
          <button disabled id="apply_with_btn">Apply</button>
        </div>
        <div class="discout-items">
          <div class="item-heading">
            <p>Available coupons</p>
            <span class="spn-as-divider"></span>
          </div>
           <div class="item-info">
             <div class="dic-with-btn">
               <p class="dic-code"> 
                <span class="coupon-circle c1"></span>
                  WHOLESALE
                 <span class="coupon-circle c2"></span>
               </p>
                 <button onclick="applyDiscount('HR8WRJ6YM6G3')">Apply</button>
             </div>
             {% assign total_in_rupees = cart.total_price | divided_by: 100 %}
             {% if total_in_rupees > 5000 %}
              <p class="dic-eligible-heading">using code save ₹600 on this product</p>
             {% else %}
               <p class="dic-heading">Add items worth ₹1,500 more to get this offer</p>
             {% endif %}
             <p class="dic-description">Get 20% off on item total above ₹3,000. Applicable on both online payment and COD</p>
           </div>
        </div>
      </div>
   </div>
</div>